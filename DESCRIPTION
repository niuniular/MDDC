Package: MDDC
Type: Package
Title: Modified Detecting Deviating Cells (MDDC) Algorithm for Adverse Event Identification in Pharmacovigilance
Version: 1.0.0
Authors@R: c(person(given = "Anran", family = "Liu", role = c("aut", "cre"),  email = "anranliu@buffalo.edu"),person(given = "Raktim", family = "Mukhopadhyay", role = c("aut", "cre"),  email = "raktimmu@buffalo.edu"),person(given = "Marianthi",  family = "Markatou",  role = "aut", email = "markatou@buffalo.edu"))
